{
  "name": "xxterminator",
  "description": "Find XSS or die trying",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "http://localhost:8081/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "externally_connectable": {
    "matches": ["http://localhost:8000/*","http://voting.na.nccgroup.com:8000/*"]
  },
  "content_scripts": [
    {
        "matches": ["http://localhost:8000/*","http://voting.na.nccgroup.com:8000/*"],
        "js": ["xxterminator.js"],
        "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "xxterminator"
  },
  "manifest_version": 2
}
