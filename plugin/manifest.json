{
  "name": "xxterminator",
  "description": "Find XSS or die trying",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "storage"
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "<all_urls>"
    ]
  },
  "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "exclude_matches":[
          "*://localhost:8081"
         ],
         "all_frames": true,
        "js": [
          "scripts/dom-mutations.js"
        ],
        "run_at": "document_start"
      }
  ],
  "browser_action": {
    "default_title": "xxterminator"
  },
  "web_accessible_resources" : [
    "scripts/click-to-fill.js",
    "styles/click-to-fill.css"
  ],
  "manifest_version": 2,
  "options_page": "html/options.html"
}
