{
  "name": "Tracy",
  "description":
    "A tool designed to assist with finding all sinks and sources of a web application and display these results in a digestible manner.",
  "version": "0.1",
  "permissions": ["alarms", "activeTab", "<all_urls>", "storage"],
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://localhost/*", "*://127.0.0.1/*"],
      "all_frames": true,
      "js": ["scripts/dom-mutations.js", "scripts/highlight.js"],
      "css": ["css/dropdown.css"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "Tracy"
  },
  "web_accessible_resources": ["scripts/method-hooking.js", "images/laddy.png"],
  "manifest_version": 2,
  "options_ui": {
    "page": "html/options.html",
    "browser_style": true,
    "chrome_style": true,
    "open_in_tab": false
  }
}
