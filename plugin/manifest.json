{
  "name": "xxterminator",
  "description": "Find XSS or die trying",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "http://localhost:8081/*",
    "storage"
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:8000/*",
      "http://voting.na.nccgroup.com:8000/*"
    ]
  },
  "content_scripts": [
    {
        "matches": [
          "http://localhost:8000/*",
          "http://voting.na.nccgroup.com:8000/*"
        ],
        "js": [
          "scripts/dom-mutations.js",
          "scripts/dom-injections.js"
        ],
        "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "xxterminator"
  },
  "web_accessible_resources" : [
    "scripts/click-to-fill.js",
    "styles/click-to-fill.css"
  ],
  "manifest_version": 2,
  "options_page": "html/options.html"
}
